{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "baseUrl": "./",
    "esModuleInterop": true,
    "paths": {
      "@root/*": ["./*"],
      "@handlers/*": ["./src/handlers/*"],
      "@helpers/*": ["./src/helpers/*"],
      "@schemas/*": ["./src/database/schemas/*"],
      "@src/*": ["./src/*"],
      "@structures/*": ["./src/structures/*"]
    }
  },
  "exclude": ["node_modules", "**/node_modules/*"]
}

